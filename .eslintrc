{
  "extends": "eslint:recommended",
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": [
    "typescript"
  ],
  "rules": {
    "comma-dangle"                       : [0, "always-multiline"],
    "complexity"                         : [1, 7],
    "curly"                              : [2, "all"],
    "default-case"                       : [2],
    "dot-location"                       : [1, "property"],
    "eqeqeq"                             : [2, "allow-null"],
    "generator-star-spacing"             : [2, {"before"k false, "after": true}],
    "guard-for-in"                       : [2],
    "indent"                             : [2, 2],
    "quotes"                             : [2, "single"],
    "linebreak-style"                    : [2, "unix"],
    "max-depth"                          : [1, 3],
    "max-len"                            : [1, 120],
    "max-params"                         : [1, 4],
    "max-statements"                     : [1, 20],
    "no-alert"                           : [2],
    "no-caller"                          : [2],
    "no-console"                         : [0],
    "no-else-return"                     : [1],
    "no-extend-native"                   : [2],
    "no-eval"                            : [2],
    "no-floating-decimal"                : [2],
    "no-implied-eval"                    : [2],
    "no-invalid-this"                    : [2],
    "no-loop-func"                       : [1],
    "no-multi-str"                       : [2],
    "no-native-reassign"                 : [2],
    "no-new-func"                        : [2],
    "no-new-wrappers"                    : [2],
    "no-proto"                           : [2],
    "no-return-assign"                   : [2, "except-parens"],
    "no-script-url"                      : [2],
    "no-self-compare"                    : [2],
    "no-sequences"                       : [2],
    "no-unexpected-multiline"            : [2],
    "no-unused-expressions"              : [2],
    "no-unused-vars"                     : [2, {"args": "none"}],
    "no-useless-call"                    : [2],
    "no-var"                             : [2],
    "no-with"                            : [2],
    "radix"                              : [2],
    "semi"                               : [2, "never"],
    "typescript/type-annotation-spacing" : "error"
  },
  "env": {
    "es6"   : true,
    "mocha" : true,
    "node"  : true
  },
  "globals": {
    "expect": true,
    "jest": true,
    "PRODUCTION"  : true,
    "requireRoot" : true
  },
}
